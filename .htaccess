<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Si le fichier ou dossier existe, le servir normalement
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Sinon, rediriger toutes les requÃªtes vers index.html
  RewriteRule ^ index.html [L]
</IfModule>
